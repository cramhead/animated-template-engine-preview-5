/* CSS declarations go here */
ul
  list-style none
  margin 2px 0

  li
    width 40em
    padding 2px 0
    transition all 0.5s ease
    background-color #CCC
    border solid 1px white
    opacity 100%
    &:hover 
      background-color white
      border solid 1px #CCC
    
button.removeQuick  
  position relative
  top 9em
  left 45em

.identifyItemsToBeRemoved
  background-color orange
  opacity 50%